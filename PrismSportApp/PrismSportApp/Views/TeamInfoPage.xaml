<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="PrismSportApp.Views.TeamInfoPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:Micro1="clr-namespace:Microcharts.Forms;assembly=Microcharts.Forms"
    xmlns:Svg="clr-namespace:FFImageLoading.Svg.Forms;assembly=FFImageLoading.Svg.Forms"
    xmlns:behaviorsPack="clr-namespace:Xamarin.Forms.BehaviorsPack;assembly=Xamarin.Forms.BehaviorsPack"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:ffTransformations="clr-namespace:FFImageLoading.Transformations;assembly=FFImageLoading.Transformations"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:yummy="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
    x:Name="InfoPage"
    BackgroundColor="White"
    mc:Ignorable="d">
    <ContentPage.ToolbarItems>
        <ToolbarItem Command="{Binding Favorite}" IconImageSource="star.png" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <ScrollView>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <yummy:PancakeView
                    Grid.Row="0"
                    Grid.Column="0"
                    BackgroundColor="#303F9F"
                    CornerRadius="0,0,20,20">
                    <StackLayout>
                        <Svg:SvgCachedImage
                            Margin="0,0,0,0"
                            Aspect="AspectFit"
                            BitmapOptimizations="True"
                            FadeAnimationForCachedImages="True"
                            HeightRequest="130"
                            Source="{Binding Table.Team.CrestUrl, Mode=TwoWay}"
                            VerticalOptions="Start" />
                        <Label Style="{StaticResource Key=TitlesTeamName}" Text="{Binding Table.Team.Name, Mode=TwoWay}" />
                    </StackLayout>
                </yummy:PancakeView>
                <StackLayout Grid.Row="1" Spacing="20">
                    <Label Style="{StaticResource TitleCharts}" Text="Match Stats" />
                    <Micro1:ChartView
                        Chart="{Binding RadielGaugeChartSample}"
                        HeightRequest="200"
                        Visual="Material"
                        WidthRequest="400" />
                </StackLayout>
                <StackLayout Grid.Row="2">
                    <Label Style="{StaticResource TitleCharts}" Text="Goals in season" />
                    <Micro1:ChartView
                        Grid.Row="2"
                        Chart="{Binding RadielGaugeGoals}"
                        HeightRequest="200"
                        Visual="Material"
                        WidthRequest="400" />
                </StackLayout>
            </Grid>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>