<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="PrismSportApp.Views.DetailLeagueView"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:Svg="clr-namespace:FFImageLoading.Svg.Forms;assembly=FFImageLoading.Svg.Forms"
    xmlns:behaviors="clr-namespace:PrismSportApp.Behaviors"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:ffimageloading="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="{Binding League.Name}"
    mc:Ignorable="d">
    <ContentPage.Content>
        <StackLayout>
            <ListView
                x:Name="ListLeague"
                CachingStrategy="RecycleElement"
                ItemsSource="{Binding Table}"
                RowHeight="100"
                SelectionMode="Single"
                SeparatorColor="ForestGreen"
                Visual="Material">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <ViewCell.View>
                                <Frame>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="370" />
                                            <ColumnDefinition Width="370" />
                                            <ColumnDefinition Width="370" />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <StackLayout Orientation="Horizontal">
                                            <Label
                                                Grid.Row="0"
                                                Grid.Column="0"
                                                Style="{StaticResource DetailLeagueLabelPosition}"
                                                Text="{Binding Position}" />
                                            <Svg:SvgCachedImage
                                                Grid.Row="0"
                                                Grid.Column="2"
                                                Aspect="AspectFit"
                                                Source="{Binding Team.CrestUrl}" />
                                            <Label
                                                Grid.Row="0"
                                                Grid.Column="3"
                                                Style="{StaticResource DetailLeagueLabelName}"
                                                Text="{Binding Team.Name, Mode=TwoWay}" />
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>
                                                <StackLayout HorizontalOptions="End">
                                                    <StackLayout BackgroundColor="Yellow" Orientation="Horizontal">
                                                        <Label Style="{StaticResource DetailLeagueLabelTitle}" Text="Pl" />
                                                        <Label Style="{StaticResource DetailLeagueLabelTitleW}" Text="W" />
                                                        <Label Style="{StaticResource DetailLeagueLabelTitleD}" Text="D" />
                                                        <Label Style="{StaticResource DetailLeagueLabelTitleL}" Text="L" />
                                                        <Label Style="{StaticResource DetailLeagueLabelTitle}" Text="GD" />
                                                        <Label Style="{StaticResource DetailLeagueLabelTitle}" Text="PTS" />
                                                    </StackLayout>
                                                    <StackLayout BackgroundColor="Bisque" Orientation="Horizontal">
                                                        <Label Style="{StaticResource DetailLeagueLabel}" Text="{Binding PlayedGames}" />
                                                        <Label Style="{StaticResource DetailLeagueLabelW}" Text="{Binding Won}" />
                                                        <Label Style="{StaticResource DetailLeagueLabelD}" Text="{Binding Draw}" />
                                                        <Label Style="{StaticResource DetailLeagueLabelL}" Text="{Binding Lost}" />
                                                        <Label Style="{StaticResource DetailLeagueLabel}" Text="{Binding GoalDifference}" />
                                                        <Label Style="{StaticResource DetailLeagueLabelPTS}" Text="{Binding Points}" />
                                                    </StackLayout>
                                                </StackLayout>
                                            </Grid>

                                        </StackLayout>
                                    </Grid>
                                    <Frame.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding Path=BindingContext.Tap, Source={x:Reference ListLeague}}" CommandParameter="{Binding .}" />
                                    </Frame.GestureRecognizers>
                                    <Frame.Behaviors>
                                        <behaviors:ViewTappedButtonBehavior AnimationType="Scale" />
                                    </Frame.Behaviors>
                                </Frame>
                            </ViewCell.View>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>