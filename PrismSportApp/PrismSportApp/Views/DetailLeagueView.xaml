<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="PrismSportApp.Views.DetailLeagueView"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:behaviors="clr-namespace:PrismSportApp.Behaviors"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:ffimageloading="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="{Binding NameLeague}"
    mc:Ignorable="d">
    <ContentPage.Content>
        <StackLayout>
            <ListView
                x:Name="ListLeague"
                CachingStrategy="RecycleElement"
                ItemsSource="{Binding Table}"
                RowHeight="80"
                SelectionMode="Single"
                SeparatorColor="ForestGreen">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <ViewCell.View>
                                <StackLayout>
                                    <Frame HorizontalOptions="CenterAndExpand" WidthRequest="400">
                                        <StackLayout Orientation="Horizontal">
                                            <Label Style="{StaticResource DetailLeagueLabelPosition}" Text="{Binding Position}" />
                                            <Label Style="{StaticResource DetailLeagueLabelName}" Text="{Binding Team.Name, Mode=TwoWay}" />
                                            <StackLayout
                                                HorizontalOptions="EndAndExpand"
                                                Orientation="Horizontal"
                                                Spacing="10">
                                                <StackLayout>
                                                    <Label Style="{StaticResource DetailLeagueLabelTitle}" Text="Pl" />
                                                    <Label Style="{StaticResource DetailLeagueLabel}" Text="{Binding PlayedGames}" />
                                                </StackLayout>
                                                <StackLayout>
                                                    <Label Style="{StaticResource DetailLeagueLabelTitleW}" Text="W" />
                                                    <Label Style="{StaticResource DetailLeagueLabelW}" Text="{Binding Won}" />
                                                </StackLayout>
                                                <StackLayout>
                                                    <Label Style="{StaticResource DetailLeagueLabelTitleD}" Text="D" />
                                                    <Label Style="{StaticResource DetailLeagueLabelD}" Text="{Binding Draw}" />
                                                </StackLayout>
                                                <StackLayout>
                                                    <Label Style="{StaticResource DetailLeagueLabelTitleL}" Text="L" />
                                                    <Label Style="{StaticResource DetailLeagueLabelL}" Text="{Binding Lost}" />
                                                </StackLayout>
                                                <StackLayout>
                                                    <Label Style="{StaticResource DetailLeagueLabelTitle}" Text="GD" />
                                                    <Label Style="{StaticResource DetailLeagueLabel}" Text="{Binding GoalDifference}" />
                                                </StackLayout>
                                                <StackLayout>
                                                    <Label Style="{StaticResource DetailLeagueLabelTitle}" Text="PTS" />
                                                    <Label Style="{StaticResource DetailLeagueLabelPTS}" Text="{Binding Points}" />
                                                </StackLayout>
                                            </StackLayout>
                                        </StackLayout>
                                        <Frame.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding Path=BindingContext.Tap, Source={x:Reference ListLeague}}" CommandParameter="{Binding .}" />
                                        </Frame.GestureRecognizers>
                                        <Frame.Behaviors>
                                            <behaviors:ViewTappedButtonBehavior AnimationType="Scale" />
                                        </Frame.Behaviors>
                                    </Frame>
                                </StackLayout>
                            </ViewCell.View>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>