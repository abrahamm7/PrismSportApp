<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="PrismSportApp.Views.MatchesPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:behaviorsPack="clr-namespace:Xamarin.Forms.BehaviorsPack;assembly=Xamarin.Forms.BehaviorsPack"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Padding="15">
                <Picker
                    x:Name="PickerCompetitions"
                    Title="Select League"
                    ItemDisplayBinding="{Binding Name}"
                    ItemsSource="{Binding CompetitionsLists}">
                    <Picker.Behaviors>
                        <behaviorsPack:EventToCommandBehavior
                            Command="{Binding SelectItem}"
                            CommandParameter="{Binding Source={x:Reference PickerCompetitions}}"
                            EventName="SelectedIndexChanged" />
                    </Picker.Behaviors>
                </Picker>
                <Picker
                    Title="Stage"
                    ItemDisplayBinding="{Binding Stage}"
                    ItemsSource="{Binding Matches}" />
                <Picker Title="MatchDay" ItemsSource="{Binding}" />
            </StackLayout>
            <ListView
                CachingStrategy="RecycleElement"
                ItemsSource="{Binding Matches}"
                RowHeight="200"
                SelectionMode="Single"
                SeparatorColor="ForestGreen">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <ViewCell.View>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />

                                    </Grid.RowDefinitions>
                                    <StackLayout
                                        Grid.Row="0"
                                        Grid.Column="0"
                                        Grid.ColumnSpan="2">
                                        <Label
                                            FontAttributes="Bold"
                                            FontSize="18"
                                            Text="{Binding Group}"
                                            TextColor="Black" />
                                    </StackLayout>
                                    <Label
                                        Grid.Row="1"
                                        Grid.Column="0"
                                        FontSize="18"
                                        HorizontalTextAlignment="Center"
                                        Text="{Binding HomeTeam.Name, Mode=TwoWay}"
                                        TextColor="Black"
                                        VerticalTextAlignment="Center" />
                                    <Frame
                                        Grid.Row="1"
                                        Grid.Column="1"
                                        BorderColor="ForestGreen"
                                        CornerRadius="15"
                                        HasShadow="True">
                                        <StackLayout
                                            Orientation="Horizontal"
                                            Spacing="10"
                                            VerticalOptions="Start">
                                            <Label
                                                FontAttributes="Bold"
                                                FontSize="20"
                                                HorizontalOptions="CenterAndExpand"
                                                Text="{Binding Score.FullTime.HomeTeam}"
                                                TextColor="{Binding HomeColor}"
                                                VerticalOptions="CenterAndExpand" />
                                            <Label
                                                FontAttributes="Bold"
                                                FontSize="20"
                                                HorizontalOptions="CenterAndExpand"
                                                Text="{Binding Score.FullTime.AwayTeam}"
                                                TextColor="{Binding AwayColor}"
                                                VerticalTextAlignment="Start" />
                                        </StackLayout>
                                    </Frame>
                                    <Label
                                        Grid.Row="1"
                                        Grid.Column="2"
                                        FontSize="18"
                                        HorizontalTextAlignment="Center"
                                        Text="{Binding AwayTeam.Name, Mode=TwoWay}"
                                        TextColor="Black"
                                        VerticalTextAlignment="Center" />
                                </Grid>
                            </ViewCell.View>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>