<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="PrismSportApp.Views.MatchesPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:Svg="clr-namespace:FFImageLoading.Svg.Forms;assembly=FFImageLoading.Svg.Forms"
    xmlns:behaviorsPack="clr-namespace:Xamarin.Forms.BehaviorsPack;assembly=Xamarin.Forms.BehaviorsPack"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="Gamepage"
    Title="Games"
    BackgroundColor="White"
    mc:Ignorable="d">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Padding="15" BackgroundColor="White">
                <Picker
                    Title="Select League"
                    BackgroundColor="White"
                    ItemDisplayBinding="{Binding Name}"
                    ItemsSource="{Binding Leagues}"
                    SelectedItem="{Binding LeagueSelected, Mode=TwoWay}"
                    Visual="Material" />
            </StackLayout>
            <ListView
                CachingStrategy="RecycleElement"
                ItemsSource="{Binding Matches}"
                RowHeight="220"
                SelectionMode="Single"
                SeparatorColor="ForestGreen"
                Visual="Material">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <ViewCell.View>
                                <Frame>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>
                                        <StackLayout
                                            Grid.Row="0"
                                            Grid.Column="0"
                                            Grid.ColumnSpan="2">
                                            <Label Style="{StaticResource Key=GroupLabel}" Text="{Binding Group}" />
                                        </StackLayout>
                                        <Label
                                            Grid.Row="1"
                                            Grid.Column="0"
                                            Style="{StaticResource Key=Team}"
                                            Text="{Binding HomeTeam.Name, Mode=TwoWay}" />
                                        <Frame
                                            Grid.Row="1"
                                            Grid.Column="1"
                                            BorderColor="ForestGreen"
                                            CornerRadius="15"
                                            HasShadow="True"
                                            Visual="Material">
                                            <StackLayout
                                                Orientation="Horizontal"
                                                Spacing="10"
                                                VerticalOptions="Start">
                                                <Label Style="{StaticResource Key=Score}" Text="{Binding Score.FullTime.HomeTeam}" />
                                                <Label Style="{StaticResource Key=Score}" Text="-" />
                                                <Label Style="{StaticResource Key=Score}" Text="{Binding Score.FullTime.AwayTeam}" />
                                            </StackLayout>
                                        </Frame>
                                        <Label
                                            Grid.Row="1"
                                            Grid.Column="2"
                                            Style="{StaticResource Key=Team}"
                                            Text="{Binding AwayTeam.Name, Mode=TwoWay}" />
                                        <Label
                                            Grid.Row="2"
                                            Grid.Column="2"
                                            Style="{StaticResource Status}"
                                            Text="{Binding Status, Mode=TwoWay}" />
                                        <Label
                                            Grid.Row="2"
                                            Grid.Column="0"
                                            Style="{StaticResource Date}"
                                            Text="{Binding UtcDate, Mode=TwoWay}" />
                                    </Grid>
                                </Frame>
                            </ViewCell.View>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>