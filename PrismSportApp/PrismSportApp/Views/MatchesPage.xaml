<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="PrismSportApp.Views.MatchesPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:behaviorsPack="clr-namespace:Xamarin.Forms.BehaviorsPack;assembly=Xamarin.Forms.BehaviorsPack"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:fe="clr-namespace:FreshEssentials;assembly=FreshEssentials"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="Gamepage"
    Title="Games"
    BackgroundColor="White"
    mc:Ignorable="d">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Padding="15" BackgroundColor="White">
                <Picker
                    Title="Select League"
                    ItemDisplayBinding="{Binding Name}"
                    ItemsSource="{Binding Leagues}"
                    SelectedItem="{Binding LeagueSelected, Mode=TwoWay}"
                    Visual="Material" />
                <Picker
                    Title="Select Stage"
                    ItemDisplayBinding="{Binding Stage}"
                    ItemsSource="{Binding Stages}"
                    SelectedItem="{Binding StageSelected, Mode=TwoWay}"
                    Visual="Material" />
            </StackLayout>
            <ListView
                CachingStrategy="RecycleElement"
                ItemsSource="{Binding Matches}"
                RowHeight="220"
                SelectionMode="Single"
                SeparatorColor="ForestGreen"
                Visual="Material">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <ViewCell.View>
                                <Frame>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>
                                        <StackLayout
                                            Grid.Row="0"
                                            Grid.Column="0"
                                            Grid.ColumnSpan="2">
                                            <Label
                                                FontAttributes="Bold"
                                                FontSize="18"
                                                Text="{Binding Group}"
                                                TextColor="Black" />
                                        </StackLayout>
                                        <Label
                                            Grid.Row="1"
                                            Grid.Column="0"
                                            FontSize="18"
                                            HorizontalTextAlignment="Center"
                                            Text="{Binding HomeTeam.Name, Mode=TwoWay}"
                                            TextColor="Black"
                                            VerticalTextAlignment="Center" />
                                        <Frame
                                            Grid.Row="1"
                                            Grid.Column="1"
                                            BorderColor="ForestGreen"
                                            CornerRadius="15"
                                            HasShadow="True"
                                            Visual="Material">
                                            <StackLayout
                                                Orientation="Horizontal"
                                                Spacing="10"
                                                VerticalOptions="Start">
                                                <Label
                                                    FontAttributes="Bold"
                                                    FontSize="15"
                                                    HorizontalOptions="CenterAndExpand"
                                                    Text="{Binding Score.FullTime.HomeTeam}"
                                                    TextColor="Black"
                                                    VerticalOptions="CenterAndExpand" />
                                                <Label
                                                    FontAttributes="Bold"
                                                    FontSize="15"
                                                    HorizontalOptions="CenterAndExpand"
                                                    Text="-"
                                                    VerticalOptions="CenterAndExpand" />
                                                <Label
                                                    FontAttributes="Bold"
                                                    FontSize="15"
                                                    HorizontalOptions="CenterAndExpand"
                                                    Text="{Binding Score.FullTime.AwayTeam}"
                                                    TextColor="Black"
                                                    VerticalTextAlignment="Start" />
                                            </StackLayout>
                                        </Frame>
                                        <Label
                                            Grid.Row="1"
                                            Grid.Column="2"
                                            FontSize="18"
                                            HorizontalTextAlignment="Center"
                                            Text="{Binding AwayTeam.Name, Mode=TwoWay}"
                                            TextColor="Black"
                                            VerticalTextAlignment="Center" />
                                    </Grid>
                                </Frame>
                            </ViewCell.View>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>