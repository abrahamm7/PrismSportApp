<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="PrismSportApp.Views.ListLeaguesPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:behaviorsPack="clr-namespace:Xamarin.Forms.BehaviorsPack;assembly=Xamarin.Forms.BehaviorsPack"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:yummy="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
    x:Name="LeagueList"
    Title="Leagues"
    mc:Ignorable="d">
    <ContentPage.Content>
        <StackLayout>
            <ListView
                x:Name="ListLeague"
                CachingStrategy="RecycleElement"
                HasUnevenRows="True"
                ItemsSource="{Binding Leagues}"
                RowHeight="50"
                SelectionMode="Single"
                SeparatorVisibility="None">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <ViewCell.View>
                                <StackLayout>
                                    <Frame
                                        CornerRadius="30"
                                        HasShadow="True"
                                        HeightRequest="80">
                                        <yummy:PancakeView
                                            BackgroundColor="White"
                                            CornerRadius="20"
                                            HasShadow="True">
                                            <StackLayout>
                                                <Label
                                                    Margin="12,15,0,0"
                                                    FontSize="20"
                                                    Text="{Binding Name}"
                                                    TextColor="Black"
                                                    VerticalTextAlignment="Start" />
                                                <Button
                                                    Margin="10,0,5,0"
                                                    BackgroundColor="White"
                                                    BorderColor="ForestGreen"
                                                    BorderWidth="1"
                                                    Command="{Binding Path=BindingContext.FollowButton, Source={x:Reference LeagueList}}"
                                                    CommandParameter="{Binding .}"
                                                    CornerRadius="15"
                                                    FontSize="10"
                                                    HeightRequest="30"
                                                    HorizontalOptions="End"
                                                    Text="Follow"
                                                    TextColor="ForestGreen"
                                                    WidthRequest="130" />
                                            </StackLayout>
                                        </yummy:PancakeView>
                                        <Frame.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding Path=BindingContext.Tap, Source={x:Reference LeagueList}}" CommandParameter="{Binding .}" />
                                        </Frame.GestureRecognizers>
                                    </Frame>
                                </StackLayout>

                            </ViewCell.View>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>