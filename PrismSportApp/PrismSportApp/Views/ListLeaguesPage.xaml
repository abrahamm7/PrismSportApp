<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="PrismSportApp.Views.ListLeaguesPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:behaviorsPack="clr-namespace:Xamarin.Forms.BehaviorsPack;assembly=Xamarin.Forms.BehaviorsPack"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:yummy="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
    x:Name="LeagueList"
    Title="Leagues"
    BackgroundColor="White"
    mc:Ignorable="d">
    <ContentPage.Content>
        <StackLayout>
            <CarouselView
                x:Name="ListLeague"
                HorizontalScrollBarVisibility="Always"
                IsScrollAnimated="False"
                ItemsSource="{Binding Leagues}"
                VerticalScrollBarVisibility="Never">
                <CarouselView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout HorizontalOptions="CenterAndExpand">
                            <Frame Style="{StaticResource ListLeagueFrames}">
                                <StackLayout VerticalOptions="End">
                                    <StackLayout>
                                        <Image Aspect="AspectFit" Source="{Binding Logo, Mode=TwoWay}" />
                                    </StackLayout>
                                    <StackLayout HorizontalOptions="Center">
                                        <Label Style="{StaticResource ListLeagueLabel}" Text="{Binding Name}" />
                                    </StackLayout>
                                    <StackLayout
                                        Margin="10,5,0,10"
                                        HorizontalOptions="Center"
                                        VerticalOptions="Start">
                                        <Button
                                            Command="{Binding Path=BindingContext.FollowButton, Source={x:Reference LeagueList}}"
                                            CommandParameter="{Binding .}"
                                            Style="{StaticResource ListLeagueButton}"
                                            Text="Follow" />
                                    </StackLayout>
                                </StackLayout>
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding Path=BindingContext.Tap, Source={x:Reference LeagueList}}" CommandParameter="{Binding .}" />
                                </Frame.GestureRecognizers>
                            </Frame>
                        </StackLayout>
                    </DataTemplate>
                </CarouselView.ItemTemplate>
            </CarouselView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>